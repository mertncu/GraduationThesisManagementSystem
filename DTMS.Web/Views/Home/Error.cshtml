@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5">
    <h1 class="text-danger display-1"><i class="bi bi-exclamation-triangle"></i></h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>
    
    @if (!string.IsNullOrEmpty(Context.Request.Query["message"]))
    {
        <div class="alert alert-warning mt-4 d-inline-block text-start">
            <strong>Error Details:</strong>
            <p class="mb-0">@Context.Request.Query["message"]</p>
        </div>
    }

    @if (Model.ShowRequestId)
    {
        <p class="text-muted mt-3">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
    
    <div class="mt-4">
        <a href="/" class="btn btn-primary">Go Home</a>
        <button onclick="window.history.back()" class="btn btn-secondary">Go Back</button>
    </div>
</div>
