<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Işık University e-Campus</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body class="auth-body">
    <div class="container-fluid h-100 p-0">
        <div class="row h-100 g-0">
            <!-- Left Side: Brand/Logo -->
            <div class="col-md-7 col-lg-8 auth-left d-flex flex-column justify-content-between p-5">
                <div class="auth-logo">
                     <img src="~/images/iu_logo.png" alt="Işık University Logo" class="img-fluid" style="max-width: 300px;">
                </div>
                <!-- Starfield effect will be handled by CSS/background image -->
            </div>
            
            <!-- Right Side: Form -->
            <div class="col-md-5 col-lg-4 auth-right d-flex align-items-center justify-content-center bg-white">
                <div class="w-100 p-5" style="max-width: 500px;">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
