<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GTMS Admin</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading d-flex align-items-center border-bottom justify-content-center py-4" style="background-color: #263692;">
                <img src="~/images/iu_logo.png" alt="University Logo" class="img-fluid" style="max-height: 60px;">
            </div>
            <div class="list-group list-group-flush pt-2">
                <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action border-0 px-4 py-3 @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active-nav-link" : "")">
                    <i class="bi bi-grid-1x2-fill me-3"></i>Dashboard
                </a>
                <a asp-controller="Admin" asp-action="Users" class="list-group-item list-group-item-action border-0 px-4 py-3 @(ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "active-nav-link" : "")">
                    <i class="bi bi-people-fill me-3"></i>User Management
                </a>
                <a asp-controller="AcademicTerms" asp-action="Index" class="list-group-item list-group-item-action border-0 px-4 py-3 @(ViewContext.RouteData.Values["Controller"].ToString() == "AcademicTerms" ? "active-nav-link" : "")">
                    <i class="bi bi-calendar-check-fill me-3"></i>Academic Terms
                </a>
                <a asp-controller="Defense" asp-action="Index" class="list-group-item list-group-item-action border-0 px-4 py-3 @(ViewContext.RouteData.Values["Controller"].ToString() == "Defense" ? "active-nav-link" : "")">
                    <i class="bi bi-shield-check me-3"></i>Defense Days
                </a>
                <div class="mt-4 mb-2 px-4 text-uppercase small text-muted fw-bold">System</div>
                <a href="#" class="list-group-item list-group-item-action border-0 px-4 py-3">
                    <i class="bi bi-gear-fill me-3"></i>Configuration
                </a>
                <a href="#" class="list-group-item list-group-item-action border-0 px-4 py-3">
                    <i class="bi bi-shield-lock-fill me-3"></i>Access Logs
                </a>
            </div>
            
            <div class="sidebar-footer mt-auto p-4 border-top">
                <div class="d-flex align-items-center">
                    <div class="avatar-initial rounded-circle bg-secondary text-white me-2 d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                        AD
                    </div>
                    <div class="flex-grow-1 overflow-hidden">
                        <div class="fw-bold text-truncate" style="font-size: 0.9rem;">System Admin</div>
                        <div class="text-muted small text-truncate" style="font-size: 0.8rem;">admin@gtms.com</div>
                    </div>
                    <a asp-controller="Account" asp-action="Logout" class="text-danger ms-2" title="Logout">
                        <i class="bi bi-box-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Page Content wrapper -->
        <div id="page-content-wrapper" class="bg-light">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-dark border-bottom shadow-sm px-4 py-3">
                <div class="container-fluid px-0">
                    <button class="btn btn-link text-white p-0" id="sidebarToggle"><i class="bi bi-list fs-4"></i></button>
                    
                    <h5 class="ms-3 mb-0 text-white d-none d-md-block">Graduation Thesis Management System</h5>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">
                            <li class="nav-item">
                                <a class="nav-link position-relative me-3" href="#">
                                    <i class="bi bi-bell fs-5"></i>
                                    <span class="position-absolute top-10 start-90 translate-middle p-1 bg-danger border border-light rounded-circle">
                                        <span class="visually-hidden">New alerts</span>
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            
            <!-- Main Content -->
            <div class="container-fluid py-4 px-lg-5">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
