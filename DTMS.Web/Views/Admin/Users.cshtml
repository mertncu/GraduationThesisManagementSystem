@model IEnumerable<GTMS.Application.Features.Identity.Users.Queries.GetUsersList.UserDto>
@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">User Management</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="CreateUser" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-person-plus-fill me-1"></i> Add New User
            </a>
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Created At</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-initial rounded-circle bg-primary text-white me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                        @user.FirstName.Substring(0, 1)@user.LastName.Substring(0, 1)
                                    </div>
                                    <div>
                                        <div class="fw-bold">@user.FirstName @user.LastName</div>
                                        <div class="text-muted small">@user.PhoneNumber</div>
                                    </div>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>
                                @user.Role
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success-subtle text-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger">Inactive</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="alert alert-info" role="alert">
    <i class="bi bi-info-circle me-2"></i>
    <strong>Note:</strong> Password reset requests should be handled through the system security protocols.
</div>
