@model GTMS.Application.Features.Thesis.ThesisProposals.Queries.GetProposalDetails.ProposalDetailsVm

@{
    ViewData["Title"] = "Proposal Details";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <h1 class="h3 mb-0 text-gray-800">Proposal Details</h1>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <span class="text-muted small text-uppercase fw-bold">Status</span>
                @if (Model.Status == "Pending")
                {
                    <span class="badge bg-warning text-dark fs-6 px-3">Pending Review</span>
                }
                else if (Model.Status == "Approved")
                {
                    <span class="badge bg-success fs-6 px-3">Approved</span>
                }
                else if (Model.Status == "Rejected")
                {
                    <span class="badge bg-danger fs-6 px-3">Rejected</span>
                }
                else
                {
                    <span class="badge bg-secondary fs-6 px-3">@Model.Status</span>
                }
            </div>
            <div class="card-body p-4">
                <h2 class="h4 fw-bold text-primary mb-3">@Model.Title</h2>
                
                <div class="mb-4">
                    <h6 class="text-uppercase text-muted small fw-bold mb-2">Abstract</h6>
                    <p class="text-dark" style="white-space: pre-wrap; line-height: 1.6;">@Model.Abstract</p>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-light rounded-circle p-2 me-3">
                                <i class="bi bi-person fs-4 text-primary"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">Student</small>
                                <span class="fw-medium">@Model.StudentName</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-light rounded-circle p-2 me-3">
                                <i class="bi bi-mortarboard fs-4 text-info"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">Advisor</small>
                                <span class="fw-medium">@Model.AdvisorName</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex align-items-center text-muted small border-top pt-3">
                    <i class="bi bi-calendar-event me-2"></i>
                    <span>Submitted on @Model.SubmittedAt.ToString("MMMM dd, yyyy")</span>
                    <span class="mx-2">â€¢</span>
                    <span>@Model.TermName</span>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.AdvisorComment))
        {
            <div class="card shadow-sm border-start border-4 border-info">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-info mb-3">
                        <i class="bi bi-chat-left-quote me-2"></i> Advisor Feedback
                    </h5>
                    <p class="mb-0">@Model.AdvisorComment</p>
                    @if (Model.DecidedAt.HasValue)
                    {
                         <div class="mt-3 text-muted small">
                            Decided on @Model.DecidedAt.Value.ToString("MMMM dd, yyyy")
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
