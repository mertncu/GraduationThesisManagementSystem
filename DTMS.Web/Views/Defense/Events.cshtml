@model IEnumerable<GTMS.Application.Features.Defense.Events.Queries.GetDefenseEvents.DefenseEventDto>

@{
    ViewData["Title"] = "Defense Days";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Defense Days</h1>
        <a asp-action="CreateEvent" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> New Defense Day
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    No Defense Days defined yet.
                </div>
            }
            else
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Term</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Location</th>
                            <th>Slots</th>
                        </tr>
                    </thead>
                    <tbody>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TermName</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td>@item.StartTime - @item.EndTime</td>
                                <td>@item.Location</td>
                                <td>
                                    <span class="badge bg-info text-dark">@item.SlotDurationMinutes min</span>
                                    <span class="badge bg-secondary">@item.TotalSessions Sessions</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
