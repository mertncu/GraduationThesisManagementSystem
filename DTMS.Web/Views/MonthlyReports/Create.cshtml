@model GTMS.Application.Features.Thesis.MonthlyReports.Commands.CreateMonthlyReport.CreateMonthlyReportCommand

@{
    ViewData["Title"] = "Create Monthly Report";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">New Monthly Report</h1>
        <a asp-action="Index" asp-route-thesisId="@Model.ThesisId" class="btn btn-secondary">
             <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="ThesisId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label">Report Content</label>
                    <textarea asp-for="Content" class="form-control" rows="10" placeholder="Describe your progress this month..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send me-2"></i> Submit Report
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
