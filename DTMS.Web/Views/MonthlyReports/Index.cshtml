@model IEnumerable<GTMS.Application.Features.Thesis.MonthlyReports.Dtos.MonthlyReportDto>

@{
    ViewData["Title"] = "Monthly Reports";
    var thesisId = ViewBag.ThesisId;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Monthly Reports</h1>
        @if (User.IsInRole("Student"))
        {
            <a asp-action="Create" asp-route-thesisId="@thesisId" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> New Report
            </a>
        }
         <a href="/ThesisProjects/Details/@thesisId" class="btn btn-outline-secondary">
             <i class="bi bi-arrow-left me-1"></i> Back to Project
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center p-5">
            <i class="bi bi-journal-text fs-1 d-block mb-3"></i>
            <h4>No Reports Yet</h4>
            <p>You haven't submitted any monthly reports for this project.</p>
        </div>
    }
    else
    {
        <div class="list-group shadow">
            @foreach (var report in Model)
            {
                <div class="list-group-item p-4">
                    <div class="d-flex w-100 justify-content-between mb-2">
                        <h5 class="mb-1 text-primary">Report - @report.ReportDate.ToString("MMMM yyyy")</h5>
                        <small class="text-muted">@report.ReportDate.ToShortDateString()</small>
                    </div>
                    
                     <div class="mb-2">
                         <span class="badge @(report.Status == "Submitted" ? "bg-warning text-dark" : "bg-success")">
                             @report.Status
                         </span>
                         <span class="ms-2 text-muted small">
                             By @report.StudentName
                         </span>
                     </div>
                     
                    <p class="mb-3" style="white-space: pre-wrap;">@report.Content</p>
                    
                    @if (!string.IsNullOrEmpty(report.AdvisorComment))
                    {
                        <div class="alert alert-secondary mt-3 mb-0">
                            <strong><i class="bi bi-chat-left-quote me-2"></i> Advisor Feedback:</strong>
                            <p class="mb-0 mt-1">@report.AdvisorComment</p>
                            @if(report.ReviewedAt.HasValue)
                            {
                                 <div class="text-end mt-1"><small class="text-muted">â€“ Reviewed on @report.ReviewedAt.Value.ToShortDateString()</small></div>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>
