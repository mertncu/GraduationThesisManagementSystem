@model IEnumerable<GTMS.Application.Features.Thesis.ThesisProjects.Dtos.ThesisProjectDto>

@{
    ViewData["Title"] = "My Thesis Projects";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">My Thesis Projects</h1>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
             <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Academic Term</th>
                    <th>Approved At</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="max-width: 300px;">
                            <div class="fw-bold text-truncate">@item.Title</div>
                            @if(User.IsInRole("Advisor")) {
                                <small class="text-muted">Student: @item.StudentName</small>
                            } else {
                                <small class="text-muted">Advisor: @item.AdvisorName</small>
                            }
                        </td>
                        <td><span class="badge bg-success">@item.Status</span></td>
                        <td>@item.Term</td>
                        <td>@(item.ApprovedAt.HasValue ? item.ApprovedAt.Value.ToString("d") : "-")</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
