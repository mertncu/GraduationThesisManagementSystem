@model DTMS.Web.Controllers.ProjectDetailsViewModel

@{
    ViewData["Title"] = "Project Details";
    bool isAdvisor = User.IsInRole("Advisor");
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@Model.Project.Title</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">

            <a asp-controller="MonthlyReports" asp-action="Index" asp-route-thesisId="@Model.Project.Id" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-file-earmark-text me-1"></i> Monthly Reports
            </a>
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>

        </div>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <!-- Sidebar / Info -->
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-light fw-bold">Project Information</div>
            <div class="card-body">
                <p class="mb-1 text-muted small">Student</p>
                <p class="fw-medium">@Model.Project.StudentName</p>
                
                <p class="mb-1 text-muted small">Advisor</p>
                <p class="fw-medium">@Model.Project.AdvisorName</p>

                <p class="mb-1 text-muted small">Term</p>
                <p>@Model.Project.Term</p>

                <hr/>
                <h6 class="text-muted">Abstract</h6>
                <p class="small text-secondary">
                    @Model.Project.Abstract
                </p>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="col-md-8">
        <!-- Tabs -->
        <ul class="nav nav-tabs mb-3" id="projectTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="milestones-tab" data-bs-toggle="tab" data-bs-target="#milestones" type="button" role="tab">Milestones</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="submissions-tab" data-bs-toggle="tab" data-bs-target="#submissions" type="button" role="tab">Submissions</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="defense-tab" data-bs-toggle="tab" data-bs-target="#defense" type="button" role="tab">Defense</button>
            </li>
        </ul>

        <div class="tab-content" id="projectTabsContent">
            <!-- Milestones Tab -->
            <div class="tab-pane fade show active" id="milestones" role="tabpanel">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Project Milestones</h5>
                    @if(isAdvisor || User.IsInRole("Student"))
                    {
                        <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#createMilestoneModal">
                            <i class="bi bi-plus-lg"></i> Add Milestone
                        </button>
                    }
                </div>

                @if(!Model.Milestones.Any())
                {
                    <div class="alert alert-light text-center border">
                        <p class="mb-0 text-muted">No milestones defined yet.</p>
                    </div>
                }
                else
                {
                    <div class="timeline">
                        @foreach(var m in Model.Milestones)
                        {
                            <div class="card mb-3 border-start border-4 border-primary shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="card-title fw-bold">@m.Name</h6>
                                        <small class="text-muted">Due: @m.DueDate.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <p class="card-text text-secondary small mb-2">@m.Description</p>
                                    
                                    <!-- Submissions Section -->
                                    <div class="bg-light p-2 rounded">
                                        <h6 class="small fw-bold border-bottom pb-1 mb-2">Submissions</h6>
                                        @if(m.Submissions.Any())
                                        {
                                            <ul class="list-unstyled mb-2">
                                                @foreach(var sub in m.Submissions.OrderByDescending(s => s.SubmittedAt))
                                                {
                                                    <li class="mb-1 small">
                                                        <a href="@sub.FilePath" target="_blank" class="text-decoration-none">
                                                            <i class="bi bi-file-earmark-text"></i> @(sub.OriginalFileName ?? "File")
                                                        </a>
                                                        <span class="badge bg-secondary ms-2" style="font-size: 0.7em;">@sub.Status</span>
                                                        <span class="text-muted ms-1" style="font-size: 0.75em;">@sub.SubmittedAt.ToString("g")</span>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <p class="small text-muted mb-2">No submissions yet.</p>
                                        }

                                        <!-- Student Upload Action -->
                                        <!-- Show only if User is Student (Logic: !isAdvisor) and Milestone not locked -->
                                        @if(!isAdvisor && !m.IsCompleted)
                                        {
                                            <button class="btn btn-sm btn-outline-primary w-100" 
                                                    onclick="openUploadModal('@m.Id', '@m.Name')">
                                                <i class="bi bi-upload me-1"></i> Upload File
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Submissions Tab (All Files) -->
            <div class="tab-pane fade" id="submissions" role="tabpanel">
                @if(!Model.Milestones.SelectMany(m => m.Submissions).Any())
                {
                    <div class="alert alert-light border text-center">
                        <p class="mb-0 text-muted">No files submitted yet.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>File</th>
                                    <th>Milestone</th>
                                    <th>Date</th>
                                    <th>Status / Feedback</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var sub in Model.Milestones.SelectMany(m => m.Submissions).OrderByDescending(s => s.SubmittedAt))
                                {
                                    var milestoneName = Model.Milestones.First(m => m.Id == sub.MilestoneId).Name;
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-file-earmark-text fs-4 text-primary me-2"></i>
                                                <div>
                                                    <div class="fw-bold">@(sub.OriginalFileName ?? "Document")</div>
                                                    <small class="text-muted">By @sub.StudentName</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-light text-dark border">@milestoneName</span></td>
                                        <td>@sub.SubmittedAt.ToString("g")</td>
                                        <td>
                                            @if(sub.Status == "Submitted") { <span class="badge bg-info text-dark">Submitted</span> }
                                            else if(sub.Status == "Approved") { <span class="badge bg-success">Approved</span> }
                                            else if(sub.Status == "NeedsRevision") { <span class="badge bg-warning text-dark">Needs Revision</span> }
                                            else { <span class="badge bg-secondary">@sub.Status</span> }

                                            @if(!string.IsNullOrEmpty(sub.Feedback))
                                            {
                                                <div class="mt-1 small text-muted"><i class="bi bi-chat-left-quote me-1"></i>@sub.Feedback</div>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="@sub.FilePath" target="_blank" class="btn btn-outline-primary">
                                                    <i class="bi bi-download"></i>
                                                </a>
                                                @if(isAdvisor)
                                                {
                                                    <button type="button" class="btn btn-outline-success" 
                                                            onclick="openReviewModal('@sub.Id', '@Model.Project.Id')">
                                                        <i class="bi bi-check-lg"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>

            <!-- Defense Tab -->
            <div class="tab-pane fade" id="defense" role="tabpanel">
                <div class="row">
                    <div class="col-md-8">
                         <!-- Status Card -->
                         <div class="card mb-4 shadow-sm border-left-{@(Model.Project.Status == "DefenseScheduled" ? "success" : Model.Project.Status == "DefenseRequested" ? "warning" : "primary")}">
                             <div class="card-body">
                                 <h5 class="card-title text-gray-800">Defense Status</h5>
                                 <div class="d-flex align-items-center mt-3">
                                     <div class="me-3">
                                         @if (Model.Project.Status == "Ongoing") { <i class="bi bi-circle fs-1 text-secondary"></i> }
                                         else if (Model.Project.Status == "DefenseRequested") { <i class="bi bi-clock-history fs-1 text-warning"></i> }
                                         else if (Model.Project.Status == "DefenseScheduled") { <i class="bi bi-calendar-check fs-1 text-success"></i> }
                                         else { <i class="bi bi-info-circle fs-1 text-muted"></i> }
                                     </div>
                                     <div>
                                         <h4 class="mb-0">@Model.Project.Status</h4>
                                         <p class="text-muted mb-0">Current status of the thesis defense process.</p>
                                     </div>
                                 </div>
                             </div>
                         </div>

                        <!-- Prerequisites (Milestones) -->
                         <div class="card mb-4 shadow-sm">
                             <div class="card-header bg-white py-3">
                                 <h6 class="m-0 font-weight-bold text-primary">Prerequisites Checklist</h6>
                             </div>
                             <div class="card-body">
                                 <ul class="list-group list-group-flush">
                                     @{
                                         bool allApproved = true;
                                     }
                                     @foreach(var m in Model.Milestones)
                                     {
                                         var isApproved = m.Submissions.Any(s => s.Status == "Approved");
                                         if (!isApproved) { allApproved = false; }
                                         
                                         <li class="list-group-item d-flex justify-content-between align-items-center">
                                             <div>
                                                 <span class="@(isApproved ? "text-success fw-bold" : "text-secondary")">
                                                     <i class="bi @(isApproved ? "bi-check-circle-fill" : "bi-circle") me-2"></i> @m.Name
                                                 </span>
                                                 @if(!isApproved) { <small class="d-block text-muted ms-4">Waiting for approval</small> }
                                             </div>
                                             @if(isApproved)
                                             {
                                                 <span class="badge bg-success rounded-pill">Completed</span>
                                             }
                                             else
                                             {
                                                 <span class="badge bg-secondary rounded-pill">Pending</span>
                                             }
                                         </li>
                                     }
                                 </ul>
                             </div>
                         </div>
                    </div>

                    <div class="col-md-4">
                        <!-- Action Card -->
                        <div class="card shadow-sm">
                            <div class="card-header bg-white py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Actions</h6>
                            </div>
                            <div class="card-body text-center">
                                @if (User.IsInRole("Student") && Model.Project.Status == "Ongoing")
                                {
                                    <div class="mb-3">
                                        <i class="bi bi-mortarboard fs-1 text-primary"></i>
                                    </div>
                                    <p class="card-text small text-muted">Once all milestones are approved, you can request to defend your thesis.</p>
                                    
                                    @if(allApproved && Model.Milestones.Any())
                                    {
                                        <form asp-action="RequestDefense" asp-route-id="@Model.Project.Id" method="post" onsubmit="return confirm('Are you sure you want to request defense?');">
                                            <button type="submit" class="btn btn-primary w-100">
                                                Request Defense
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary w-100" disabled>
                                            Request Defense
                                        </button>
                                        <small class="text-danger d-block mt-2">Complete all milestones first.</small>
                                    }
                                }
                                else if (isAdvisor && Model.Project.Status == "DefenseRequested")
                                {
                                    <div class="mb-3">
                                        <i class="bi bi-exclamation-circle fs-1 text-warning"></i>
                                    </div>
                                    <p class="card-text fw-bold">Student requested defense.</p>
                                    <p class="card-text small text-muted">Review the work. If satisfied, approve to auto-schedule the defense in the current term's Defense Day.</p>
                                    
                                    <form asp-action="ApproveDefenseRequest" asp-route-id="@Model.Project.Id" method="post" onsubmit="return confirm('Approve request and schedule defense?');">
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="bi bi-check-lg me-1"></i> Approve & Schedule
                                        </button>
                                    </form>
                                }
                                else if (Model.Project.Status == "DefenseScheduled")
                                {
                                     <div class="mb-3">
                                        <i class="bi bi-calendar-event fs-1 text-success"></i>
                                    </div>
                                    <p class="fw-bold text-success">Defense Scheduled</p>
                                    <p class="small text-muted">Session details available.</p>
                                    
                                    @if(isAdvisor)
                                    {
                                        <div class="d-grid gap-2 mt-2">
                                            <a asp-controller="Defense" asp-action="JuryManagement" asp-route-thesisId="@Model.Project.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-people-fill me-1"></i> Form Jury
                                            </a>
                                            <a asp-controller="Defense" asp-action="EnterScore" asp-route-thesisId="@Model.Project.Id" class="btn btn-success">
                                                <i class="bi bi-card-checklist me-1"></i> Enter Final Result
                                            </a>
                                        </div>
                                    }
                                }
                                else if (Model.Project.Status == "Completed" || Model.Project.Status == "DefenseFailed")
                                {
                                     <div class="mb-3">
                                        @if(Model.Project.Status == "Completed")
                                        {
                                            <i class="bi bi-check-circle-fill fs-1 text-success"></i>
                                            <p class="fw-bold text-success mt-2">Thesis Completed</p>
                                        }
                                        else
                                        {
                                            <i class="bi bi-x-circle-fill fs-1 text-danger"></i>
                                             <p class="fw-bold text-danger mt-2">Defense Failed</p>
                                        }
                                    </div>
                                    
                                    @if(Model.Project.DefenseResult != null)
                                    {
                                        <div class="card bg-light border-0 small text-start">
                                            <div class="card-body">
                                                <h6 class="card-title fw-bold border-bottom pb-2">Final Grading</h6>
                                                <div class="d-flex justify-content-between mb-1">
                                                    <span>Quality:</span>
                                                    <span class="fw-bold">@Model.Project.DefenseResult.QualityScore</span>
                                                </div>
                                                <div class="d-flex justify-content-between mb-1">
                                                    <span>Presentation:</span>
                                                    <span class="fw-bold">@Model.Project.DefenseResult.PresentationScore</span>
                                                </div>
                                                <div class="d-flex justify-content-between mb-1">
                                                    <span>Q&A:</span>
                                                    <span class="fw-bold">@Model.Project.DefenseResult.QAScore</span>
                                                </div>
                                                 <div class="d-flex justify-content-between border-top pt-2 mt-2">
                                                    <span class="fw-bold">Total:</span>
                                                    <span class="fw-bold fs-6 @(Model.Project.DefenseResult.TotalScore >= 70 ? "text-success" : "text-danger")">
                                                        @Model.Project.DefenseResult.TotalScore
                                                    </span>
                                                </div>
                                                @if(!string.IsNullOrEmpty(Model.Project.DefenseResult.Comment))
                                                {
                                                    <div class="mt-2 pt-2 border-top text-muted fst-italic">
                                                        "@Model.Project.DefenseResult.Comment"
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">No actions available at this stage.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

<!-- Review Submission Modal (Advisor) -->
@if(isAdvisor)
{
    <div class="modal fade" id="reviewSubmissionModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Review Submission</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/Submissions/Review" method="post">
                    <input type="hidden" name="ThesisId" id="reviewThesisId" />
                    <input type="hidden" name="SubmissionId" id="reviewSubmissionId" />
                    
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <select name="Status" class="form-select" required>
                                <option value="Approved">Approved</option>
                                <option value="NeedsRevision">Needs Revision (Reject)</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Feedback</label>
                            <textarea name="Feedback" class="form-control" rows="3" placeholder="Optional comments..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Review</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function openReviewModal(submissionId, thesisId) {
            document.getElementById('reviewSubmissionId').value = submissionId;
            document.getElementById('reviewThesisId').value = thesisId;
            var myModal = new bootstrap.Modal(document.getElementById('reviewSubmissionModal'));
            myModal.show();
        }
    </script>
}

<!-- Create Milestone Modal (Advisor & Student) -->
@if(isAdvisor || (User.IsInRole("Student") && Model.Project.StudentName == User.Identity.Name)) 
{
    @* Note: A robust check would use StudentId vs User Id claim, but for UI hiding IsInRole("Student") is a good proxy coupled with backend check *@
    <div class="modal fade" id="createMilestoneModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">New Milestone</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/ThesisMilestones/Create" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="ThesisId" value="@Model.Project.Id" />
                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input type="text" name="Name" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Due Date</label>
                            <input type="date" name="DueDate" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea name="Description" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- Upload Submission Modal (Student) -->
@if(!isAdvisor)
{
    <div class="modal fade" id="uploadSubmissionModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Upload Submission</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/Submissions/Create" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="ThesisId" value="@Model.Project.Id" />
                    <input type="hidden" name="MilestoneId" id="uploadMilestoneId" />
                    
                    <div class="modal-body">
                        <p class="text-muted mb-3">Uploading for: <strong id="uploadMilestoneName"></strong></p>
                        
                        <div class="mb-3">
                            <label class="form-label">Select File (PDF, DOCX, ZIP)</label>
                            <input type="file" name="File" class="form-control" required />
                        </div>
                         <div class="mb-3">
                            <label class="form-label">Notes (Optional)</label>
                            <textarea name="Notes" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function openUploadModal(milestoneId, milestoneName) {
            document.getElementById('uploadMilestoneId').value = milestoneId;
            document.getElementById('uploadMilestoneName').innerText = milestoneName;
            var myModal = new bootstrap.Modal(document.getElementById('uploadSubmissionModal'));
            myModal.show();
        }
    </script>
}
